<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
   <style name="Theme.Noteapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4A0263</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#4A0263</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Noteapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Noteapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Noteapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Light Mode -->
    <!-- Screen Background if light mode is ON -->

    <style name="SCREEN_BG">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text Color if light mode is ON -->

    <style name="TEXT_COL">
        <item name="android:background">#000</item>
    </style>

    <!-- Button Background if light mode is ON -->

    <style name="BUTTON_BG">
        <item name="android:background">#4A0263</item>
        <item name="android:textColor">#FFF</item>
<!--        <item name="android:fontFamily">@font/league_script</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView Background if light mode is ON -->

    <style name="TV_BG">
        <item name="android:background">#4A0263</item>
    </style>

    <style name="ET">
        <item name="android:backgroundTint">#9F9C9C</item>
<!--        <item name="android:textColor">@color/white</item>-->
    </style>

</resources>